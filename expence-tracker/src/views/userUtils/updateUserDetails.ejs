<%- include("../partials/header.ejs") %>
<%- include("../partials/navbar.ejs") %>
<%- include("../partials/message.ejs") %>

<div class="row w-100"></div>
  <div class="col-10 row m-auto mt-3">
    <div class="col-9 p-3 rounded-4 mt-3 row m-auto bg-white">

<form action="/backend/user/updateUserDetails/<%= userData._id %>" method="post">
    <div class="mb-2">
      <label for="emailId">Email Id</label>
      <input 
      type="email" 
      value="<%= userData.emailId %>"
      class="form-control"
      id="emailId"
      name="emailId"
      disabled
      >
    </div>
    <div class="mb-2">
      <label for="fullName">Full Name</label>
      <input 
      type="text" 
      value="<%= userData.fullName %>"
      class="form-control"
      id="fullName"
      name="fullName"
      >
    </div>
    <div class="mb-2">
      <label for="cityName">CityName</label>
      <input 
      type="text" 
      value="<%= userData.address.cityName %>"
      class="form-control"
      id="cityName"
      name="cityName"
  
      >
    </div>
    <div class="mb-2">
      <label for="stateName">State Name</label>
      <input 
      type="text" 
      value="<%= userData.address.stateName %>"
      class="form-control"
      id="stateName"
      name="stateName"
  
      >
    </div>
    <div class="mb-2">
      <label for="pincode">Pin code</label>
      <input 
      type="number" 
      value="<%= userData.address.pincode %>"
      class="form-control"
      id="pincode"
      name="pincode"
  
      >
    </div>
    <button class="btn btn-success" type="submit">Updated UserDetails</button>
      </form>
    </div>
  </div>
</div>
<%- include("../partials/footer.ejs") %>